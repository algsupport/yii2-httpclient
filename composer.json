{
    "name": "algsupport/yii2-httpclient",
    "description": "HTTP client extension for the Yii framework",
    "keywords": ["yii2", "http", "httpclient", "curl"],
    "type": "yii2-extension",
    "license": "BSD-3-Clause",
    "support": {
        "issues": "https://github.com/algsupport/yii2-httpclient/issues",
        "source": "https://github.com/algsupport/yii2-httpclient"
    },
    "authors": [
        {
            "name": "Albert Gukasian",
            "email": "admin@algsupport.com"
        }
    ],
    "require": {
        "algsupport/yii2": "~2.0.13",
        "paragonie/random_compat": ">=1"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }
    ],
    "config": {
        "allow-plugins": {
            "yiisoft/yii2-composer": true
        }
    },
    "autoload": {
        "psr-4": { "yii\\httpclient\\": "src" }
    }
}
